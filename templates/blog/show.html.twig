{% extends 'base.html.twig' %}

{% block title %}{{ post.title }} | Blog{% endblock %}

{% block body %}
<div class="container mt-5" style="max-width: 800px;">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <a href="{{ path('blog') }}" class="btn btn-outline-primary btn-sm px-4 py-2">
            <i class="bi bi-arrow-left"></i> Powrót do listy postów
        </a>
        <div class="d-flex gap-2">
            <a href="{{ path('blog_edit', {'id': post.id}) }}" class="btn btn-warning btn-sm px-4 py-2">Edytuj</a>
            <form method="post" action="{{ path('blog_delete', {'id': post.id}) }}" onsubmit="return confirm('Na pewno usunąć ten post?');">
                <input type="hidden" name="_token" value="{{ csrf_token('delete_post_' ~ post.id) }}">
                <button class="btn btn-danger btn-sm px-4 py-2" type="submit">Usuń</button>
            </form>
        </div>
    </div>
    <div class="card">
        <div class="card-body">
            <h2 class="card-title">{{ post.title }}</h2>
            <p class="card-text">{{ post.content|nl2br }}</p>
        </div>
        <div class="card-footer text-muted">
            Dodano: {{ post.createdAt|date('Y-m-d H:i') }}
        </div>
    </div>
</div>
{% endblock %}
