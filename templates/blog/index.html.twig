{% extends 'base.html.twig' %}

{% block title %}Mój Blog{% endblock %}

{% block body %}
<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="mb-0">Witaj na moim blogu!</h1>
        <a href="{{ path('blog_post_add') }}" class="btn btn-success">Dodaj post</a>
    </div>
    {% if posts is empty %}
        <div class="alert alert-info">Brak postów. Dodaj pierwszy wpis!</div>
    {% else %}
        <div class="list-group">
            {% for post in posts %}
                <a href="{{ path('blog_post_show', {id: post.id}) }}" class="list-group-item list-group-item-action mb-2">
                    <h5 class="mb-1">{{ post.title }}</h5>
                    <small class="text-muted">{{ post.createdAt|date('Y-m-d H:i') }}</small>
                </a>
            {% endfor %}
        </div>
    {% endif %}
</div>
{% endblock %}
